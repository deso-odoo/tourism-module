<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="tourism_activies_list_view" model="ir.ui.view">
        <field name="name">Tourism Activities List View</field>
        <field name="model">tourism.activities</field>
        <field name="arch" type="xml">
            <tree string="Activities">
                <field name="name"/>
                <field name="Color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="tourism_activities_form_view" model="ir.ui.view">
        <field name="name">Tourism Activities Form View</field>
        <field name="model">tourism.activities</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1><field name="name" placeholder="Activity"/></h1>
                    <field name="Color" widget="color_picker"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tourism_activities_search_view" model="ir.ui.view">
        <field name="name">tourism.activities.search</field>
        <field name="model">tourism.activities</field>
        <field name="arch" type="xml">
            <search string="Activities">
                <field name="name" string="Activity" />
            </search>
        </field>
    </record>
</odoo>
