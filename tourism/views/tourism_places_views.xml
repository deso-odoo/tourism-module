<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tourism_places_list_view" model="ir.ui.view">
        <field name="name">Tourism Places List View</field>
        <field name="model">tourism.places</field>
        <field name="arch" type="xml">
            <tree string="Tourism Destinations">
                <field name="name" />
                <field name="country_id" />
                <field name="duration" string="Duration(Days)" />
                <field name="activities_ids" widget="many2many_tags" options="{'color_field':'Color'}" />
                <!-- <field name="total_seats" /> -->
                <!-- <field name="available_seats" /> -->
                <field name="price" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="tourism_places_form_view" model="ir.ui.view">
        <field name="name">Tourism Places Form View</field>
        <field name="model">tourism.places</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    <button name="action_start_booking" string="Start Booking" type='object' class='oe_highlight' states='a_new' />
                    <button name="action_close_booking" string="Close Booking" type='object' states="b_bookings_open" class='oe_highlight' />
                    <button name="action_cancel" string="Cancel" type='object' states="a_new,b_bookings_open,c_bookings_closed" />
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Upcoming" bg_color="bg-info" attrs="{'invisible':[('state', '!=', 'a_new')]}" />
                    <widget name="web_ribbon" title="Bookings Closed" bg_color="bg-success" attrs="{'invisible':[('state', '!=', 'c_bookings_closed')]}" />
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-danger" attrs="{'invisible':[('state', '!=', 'd_cancel')]}" />
                    <h1><field name="name" placeholder="Location"/></h1>
                    <h2><field name="country_id" placeholder="Country" options="{'no_create':True, 'no_open':True}"/></h2>
                    <field name="image" widget='image' class="oe_avatar" nolabel="1" options="{'size': [200, 200]}"/>
                    <group>
                        <group>
                            <field name="hotel_id" options="{'no_create':True}"/>
                            <field name="hotel_price" />
                            <field name="duration"/>
                            <field name="price" string="Tour Price (excluding Hotels)"/>
                        </group>
                        <group>
                            <field name="activities_ids" widget="many2many_tags" options="{'color_field':'Color'}" />
                            <!-- <field name="total_seats"/> -->
                            <field name="total_booked_seats"/>
                            <!-- <field name="available_seats"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Mode of Transportation">
                            <group>
                                <group>
                                    <field name="including_flights" string="Flight"/>
                                    <field name="including_road" string="Road" />
                                    <field name="including_rail" string="Train" />
                                </group>
                                <group>
                                    <field name="flight_price" string="Flight Price" attrs="{'invisible':[('including_flights', '=', False)]}"/>
                                    <field name="road_price" string="By Road Price" attrs="{'invisible':[('including_road', '=', False)]}"/>
                                    <field name="train_price" string="Train Price" attrs="{'invisible':[('including_rail', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bookings">
                            <field name="booking_ids" attrs="{'readonly': ['|',
                                                                            ('state', '=', 'a_new'),
                                                                            '|',
                                                                                ('state', '=', 'c_bookings_closed'),
                                                                                ('state', '=', 'd_cancel')
                                                                            ]}" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tourism_places_search_view" model="ir.ui.view">
        <field name="name">Tourism Places Search View</field>
        <field name="model">tourism.places</field>
        <field name="arch" type="xml">
            <search string="Places">
                <field name="name" string="Destination" />
                <field name="country_id" string="Country" />
                <filter string="Including Flights" name="name" domain="[('including_flights', '=', 'True')]" />
                <separator/>
                <filter string="Duration &lt;= 7Days" name="name" domain="[('duration', '&lt;=', 7)]" />
                <filter string="Duration &gt; 7Days" name="name" domain="[('duration', '&gt;', 7)]" />
                <filter string="Available" name="available" domain="[('state', 'in', ['a_new', 'b_bookings_open'])]"></filter>
                <group string="Country">
                    <filter string="Country" name="name" context="{'group_by':'country_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="tourism_places_kanban_view" model="ir.ui.view">
        <field name="name">tourism.places.kanban.view</field>
        <field name="model">tourism.places</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name" />
                <field name="country_id" />
                <field name="duration" />
                <field name="price" />
                <field name="activities_ids" />
                <field name="total_booked_seats" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-box" >
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name" />
                            </strong>
                            <div>
                                <field name="country_id" />
                            </div>
                            <div>
                                Duration: <field name="duration" /> days
                            </div>
                            <div>
                                Price: <field name="price" />
                            </div>
                            <div>
                                Total Booking: <field name="total_booked_seats" />
                            </div>
                            <field name="activities_ids" options="{'color_field':'Color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
