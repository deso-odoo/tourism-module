<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tourism_booking_list_view" model="ir.ui.view">
        <field name="name">Tourism Booking List View</field>
        <field name="model">tourism.bookings</field>
        <field name="arch" type="xml">
            <tree string="Bookings" editable="bottom">
                <field name="name_id"/>
                <field name="book_seats" string="Booked Seats"/>
                <field name="tax" string="Tax (GST 18%)"/>
                <field name="total_price" string="Total Price (Including Taxes)"/>
            </tree>
        </field>
    </record>

